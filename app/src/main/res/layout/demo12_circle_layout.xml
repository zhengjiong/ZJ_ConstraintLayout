<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/sun"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sun"
        />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/earth"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintCircle="@+id/sun"
        app:layout_constraintCircleAngle="45"
        app:layout_constraintCircleRadius="77dp"
        app:srcCompat="@drawable/earth"
        />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/mars"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/mars"
        app:layout_constraintCircle="@+id/sun"
        app:layout_constraintCircleAngle="110"
        app:layout_constraintCircleRadius="105dp"
        />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/saturn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/saturn"
        app:layout_constraintCircle="@+id/sun"
        app:layout_constraintCircleAngle="235"
        app:layout_constraintCircleRadius="130dp"
        />
</android.support.constraint.ConstraintLayout>