<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--
    Group帮助你对一组控件进行设置。最常见的情况是控制一组控件的visibility。
    你只需把控件的id添加到Group，就能同时对里面的所有控件进行操作。
    这里可以把Group中的visibility设置为gone, 就会把title123都一起隐藏了
    -->
    <android.support.constraint.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="title1, title2, title3"/>
    <TextView
        android:id="@+id/title1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#3af6fe"
        android:text="textview"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintHorizontal_bias="0"
        />
    <TextView
        android:id="@+id/title2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#fd8cd7"
        android:text="textview"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintHorizontal_bias="0.5"
        />
    <TextView
        android:id="@+id/title3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#f9b95b"
        android:text="textview"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintHorizontal_bias="1"
        />
</android.support.constraint.ConstraintLayout>